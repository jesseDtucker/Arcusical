<UserControl
	x:Class="Arcusical.SongListControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Arcusical"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">
	<UserControl.Resources>
		<DataTemplate x:Key="SongListItemTemplate" >
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="{Binding Title}"/>
			</StackPanel>
		</DataTemplate>
	</UserControl.Resources>
	<Grid Margin="100">
		<TextBlock Text="Songs: " FontSize="40" Foreground="White" VerticalAlignment="Top"/>
		<ScrollViewer Margin="20,50,0,0">
			<ListView Height="Auto" ItemsSource="{Binding SongList.List}" ItemTemplate="{StaticResource SongListItemTemplate}" ItemClick="SongClicked" IsItemClickEnabled="True"/>
		</ScrollViewer>
	</Grid>
</UserControl>
