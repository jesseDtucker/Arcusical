<Page
	x:Class="Arcusical.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Arcusical"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	VerticalAlignment="Stretch"
	mc:Ignorable="d">

	<Grid Margin="0,25,0,0">
		<Grid.RowDefinitions>
			<RowDefinition Height="70"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
			  Grid.Row="0"  Height="70" Background="#2A2E2E" >
			<local:SongPlayer HorizontalAlignment="Left" x:Name="v_player"/>
			<local:Search VerticalAlignment="Center" HorizontalAlignment="Right" 
						  Margin="15" Width="250" x:Name="v_search"/>
		</Grid>
		<Grid Background="WhiteSmoke" Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="20*"/>
				<ColumnDefinition Width="45*"/>
				<ColumnDefinition Width="400"/>
			</Grid.ColumnDefinitions>
			<local:SongListControl Grid.Column="0" x:Name="v_songListControl"/>
			<local:AlbumListControl Grid.Column="1" x:Name="v_albumListControl"/>
			<local:SearchResultsControl Grid.Column="2" HorizontalAlignment="Right" 
										Width="400" x:Name="v_searchResults"/>
		</Grid>
	</Grid>

</Page>
