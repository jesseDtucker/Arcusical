<Page
	x:Class="Arcusical.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Arcusical"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	VerticalAlignment="Stretch"
	mc:Ignorable="d">
	<Page.Resources>
		<ResourceDictionary>
			<LinearGradientBrush x:Name="shadowBrush" StartPoint="0,0" EndPoint="0,1">
				<GradientStop Color="Black" Offset="-0.7"/>
				<GradientStop Color="#00000000" Offset="1"/>
			</LinearGradientBrush>
			<LinearGradientBrush x:Name="shadowBrushVertical" StartPoint="0,0" EndPoint="1,0">
				<GradientStop Color="Black" Offset="-0.7"/>
				<GradientStop Color="#00000000" Offset="1"/>
			</LinearGradientBrush>
			<LinearGradientBrush x:Name="shadowBrushVerticalReverse" StartPoint="0,0" EndPoint="1,0">
				<GradientStop Color="#00000000" Offset="0"/>
				<GradientStop Color="Black" Offset="1.7"/>
			</LinearGradientBrush>
		</ResourceDictionary>
	</Page.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="70"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
			  Grid.Row="0"  Height="70" Background="#0288D1" >
			<local:SongPlayer HorizontalAlignment="Left" x:Name="v_player"/>
			<local:Search VerticalAlignment="Center" HorizontalAlignment="Right" 
						  Margin="15" Width="250" x:Name="v_search"/>
		</Grid>
		<Grid Background="#F0F0F0" Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="25*"/>
				<ColumnDefinition Width="45*"/>
				<ColumnDefinition Width="400"/>
			</Grid.ColumnDefinitions>
			<local:SongListControl Grid.Column="0" x:Name="v_songListControl"/>
			<local:AlbumListControl Grid.Column="1" x:Name="v_albumListControl" HorizontalAlignment="Center"/>
			<Grid Width="10" VerticalAlignment="Stretch" Background="{StaticResource shadowBrushVertical}"
				  Grid.Column="1" HorizontalAlignment="Left"/>
			<Grid Width="10" VerticalAlignment="Stretch" Background="{StaticResource shadowBrushVerticalReverse}"
				  Grid.Column="1" HorizontalAlignment="Right"/>
			<local:SearchResultsControl Grid.Column="2" HorizontalAlignment="Right" 
										Width="400" x:Name="v_searchResults"/>
		</Grid>
		<Grid Grid.Row="1" Height="10" Background="{StaticResource shadowBrush}"
			  HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
	</Grid>

</Page>
